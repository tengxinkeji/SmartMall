<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.common.myui.RoundImageView
            android:id="@+id/img_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_logo"
            wk:type="circle"
            />
        <TextView
            android:id="@+id/txt_user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员"
            android:visibility="gone"
            android:textSize="@dimen/txt_msmall"
            android:textColor="@color/txtColor_bar"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="username"
        android:textSize="@dimen/txt_small"
        android:layout_marginLeft="10dp"
        android:textColor="@color/txtColor_txt"/>
    <TextView
        android:id="@+id/txt_addtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addtimg"
        android:textSize="@dimen/txt_small"
        android:layout_marginRight="10dp"
        android:textColor="@color/txtColor_hint"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"

            android:textSize="@dimen/txt_small"
            android:textColor="@color/txtColor_txt"/>
        <ImageView
            android:id="@+id/img_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_del"/>
    </LinearLayout>


</LinearLayout>
