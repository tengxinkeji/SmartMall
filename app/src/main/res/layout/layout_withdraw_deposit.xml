<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corners_w">
        <TextView
            android:id="@+id/txt_money"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/img_02"
            android:text="22"
            android:gravity="center"
            android:textSize="@dimen/txt_large"
            android:textColor="@color/txtColor_bar"/>
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:textColor="@color/txtColor_bar"
            android:gravity="center"
            android:layout_alignLeft="@+id/txt_money"
            android:layout_alignRight="@+id/txt_money"
            android:layout_below="@+id/txt_money"/>


        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/img_dailishang_sqtxh_02"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的银行卡"
            android:textColor="@color/txtColor_bar"
            android:gravity="center"
            android:layout_alignLeft="@+id/img_1"
            android:layout_alignRight="@+id/img_1"
            android:layout_below="@+id/img_1"/>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@mipmap/icon_go"
            android:layout_toLeftOf="@+id/img_1"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dashline"
            android:layout_alignTop="@+id/txt_money"
            android:layout_alignBottom="@+id/txt_money"
            android:layout_toRightOf="@+id/txt_money"
            android:layout_toLeftOf="@+id/img_2"/>


        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_alignLeft="@+id/txt_money"
            android:layout_below="@+id/txt_1"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(100以上)"
            android:textColor="@color/txtColor_txt"
            android:gravity="center"
            android:layout_alignLeft="@+id/txt_money"
            android:layout_below="@+id/txt_3"            
            android:layout_marginLeft="20dp"/>
        
        <TextView
            android:id="@+id/txt_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/red"
            android:text="+"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/txt_withdraw_money"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text=""
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/bg_corners_t"
            android:layout_toLeftOf="@+id/txt_add"
            android:layout_alignTop="@+id/txt_add"
            android:layout_alignBottom="@+id/txt_add"/>
        <TextView
            android:id="@+id/txt_sub"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/red"
            android:text="-"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_toLeftOf="@+id/txt_withdraw_money"
            android:layout_alignTop="@+id/txt_add"/>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/divider"
            android:layout_below="@+id/txt_4"
            android:layout_marginTop="10dp"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_5"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txt_bank"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="银行卡"
            android:padding="10dp"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/icon_right_gray"
            android:textColor="@color/txtColor_txt"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第二个工作日到账"
        android:textSize="@dimen/txt_small"
        android:gravity="center_horizontal"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/txt_withdraw"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:text="提现"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="300dp"/>

</LinearLayout>
