<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/barHeight"
    android:id="@+id/app_bar"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/bar_goods_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/back"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp" />


    <TextView
        android:id="@+id/bar_goods"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/txt_large"
        android:lines="1"
        android:textColor="@color/txtColor_bar"
        android:text="商品"

        />

    <TextView
        android:id="@+id/bar_goods_detail"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        android:textSize="@dimen/txt_large"
        android:textColor="@color/txtColor_bar"
        android:text="详情"/>


    <TextView
        android:id="@+id/bar_goods_review"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/txt_large"
        android:lines="1"
        android:textColor="@color/txtColor_bar"
        android:text="评价"
       />


    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_share"/>

    <TextView
        android:id="@+id/bar_goods_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_normal"
        android:drawableLeft="@mipmap/icon_shopping_cart"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/txt_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red"
        android:text="1"
        android:lines="1"
        android:visibility="visible"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="-20dp"/>

</LinearLayout>
