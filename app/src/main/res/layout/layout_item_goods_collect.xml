<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center_vertical"
    android:background="@color/bgColor_input">
    <CheckBox
        android:id="@+id/box_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@null"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:checked="false"
        android:background="@drawable/bg_check_2"/>

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="@dimen/img_width"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_logo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/goods_name"
            android:textColor="@color/txtColor_txt"
            android:textSize="@dimen/txt_normal"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:lines="2"/>
        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/txt_normal"
            android:lines="1"
            android:paddingTop="5dp"
            android:textColor="@color/txtColor_bar"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtColor_hint"
                android:textSize="@dimen/txt_small"
                android:paddingLeft="10dp"
                android:text="已有评论"/>
            <TextView
                android:id="@+id/txt_goods_review_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtColor_bar"
                android:textSize="@dimen/txt_small"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtColor_hint"
                android:textSize="@dimen/txt_small"
                android:text="条"/>
            <TextView
                android:id="@+id/txt_goods_buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtColor_hint"
                android:textSize="@dimen/txt_small"
                android:text="已有0人购买"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_goods_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangel_select_stroke"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/txt_small"
            android:text="@string/app_name"/>


    </LinearLayout>







</LinearLayout>
