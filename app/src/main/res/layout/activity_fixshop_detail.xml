<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/barHeight"
        android:id="@+id/app_bar"
        android:background="@color/txtColor_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bar_goods_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:id="@+id/bar_goods"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/txt_large"
            android:lines="1"
            android:textColor="@android:color/white"
            android:text="商店"
            />




        <TextView
            android:id="@+id/bar_goods_review"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/txt_large"
            android:lines="1"
            android:textColor="@android:color/white"
            android:text="评价"
            />



        <TextView
            android:id="@+id/txt_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/colect"/>

    </LinearLayout>
    <View
        android:id="@+id/view_goods"
        android:layout_width="70dp"
        android:layout_height="2dp"
        android:background="@color/txtColor_bar"/>
    <FrameLayout
        android:id="@+id/layout_frame_main_s"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"    >
    </FrameLayout>
    <View
        android:layout_height="@dimen/divider"
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:background="@color/divider"/>
    <FrameLayout
        android:id="@+id/layout_menu_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </FrameLayout>


</LinearLayout>
