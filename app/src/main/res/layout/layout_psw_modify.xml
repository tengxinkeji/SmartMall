<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:input="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_input"
    android:layout_marginLeft="@dimen/margin_input"
    android:layout_marginRight="@dimen/margin_input">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <cn.lanmei.com.smartmall.myui.MyInputEdit
        android:id="@+id/rgt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        input:txttag="手机号："
        input:input_hint="输入手机号">
    </cn.lanmei.com.smartmall.myui.MyInputEdit>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <cn.lanmei.com.smartmall.myui.MyInputEdit
            android:id="@+id/rgt_auth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            input:txttag="验证码："
            input:input_hint="输入验证码">
        </cn.lanmei.com.smartmall.myui.MyInputEdit>

        <TextView
            android:id="@+id/rgt_txt_auth"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangel_select"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <cn.lanmei.com.smartmall.myui.MyInputEdit
        android:id="@+id/rgt_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        input:input_type="psw"
        input:txttag="密码："
        input:input_hint="输入密码">
    </cn.lanmei.com.smartmall.myui.MyInputEdit>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <cn.lanmei.com.smartmall.myui.MyInputEdit
        android:id="@+id/rgt_psw_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        input:input_type="psw"
        input:txttag="确认密码："
        input:input_hint="再次输入密码">
    </cn.lanmei.com.smartmall.myui.MyInputEdit>

    <TextView
        android:id="@+id/rgt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:text="@string/register"/>

</LinearLayout>
