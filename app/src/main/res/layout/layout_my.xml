<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:img="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/wd"
        >


        <com.common.myui.CircleImageView
            android:id="@+id/my_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/img_logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            img:civ_border_width="2dp"
            img:civ_border_color="@color/yellow"/>
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="游客"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_large"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/my_img"
            />

        <TextView
            android:id="@+id/my_edit"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/icon_right_w"/>





    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <com.common.myui.MyListView
        android:id="@+id/menu3_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent">

    </com.common.myui.MyListView>
</LinearLayout>
