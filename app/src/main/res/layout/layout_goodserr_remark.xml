<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_server_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="服务时间"
        android:drawableRight="@drawable/icon_pagedown_gray"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <RadioGroup
        android:id="@+id/radiogroup_repair_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio_repair_timer_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txtColor_txt"
            android:button="@null"
            android:drawableRight="@drawable/bg_check_2"
            android:checked="false"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:padding="@dimen/pading"
            android:text="@string/radio_repair_timer_now"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@color/divider"/>
        <RadioButton
            android:id="@+id/radio_repair_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txtColor_txt"
            android:button="@null"
            android:drawableRight="@drawable/bg_check_2"
            android:checked="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:padding="@dimen/pading"
            android:text="@string/radio_repair_timer"/>
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="是否需要更换配件"
            android:gravity="center_vertical"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_parts"
            android:layout_width="50dp"
            wh:tbOnColor="@color/txtColor_bar"
            wh:tbOffColor="@color/bgColor"
            wh:tbSpotColor="@color/white"
            wh:tbOffBorderColor="@color/bgColor"
            wh:tbBorderWidth="1px"
            android:layout_height="25dp"

            android:layout_marginRight="40dp">
        </com.zcw.togglebutton.ToggleButton>
    </LinearLayout>

</LinearLayout>
