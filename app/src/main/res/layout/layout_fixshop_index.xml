<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:visibility="visible">
        <com.common.banner.view.AbSlidingPlayView
            xmlns:ab="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:id="@+id/main_menu_0_ad"
            ab:point_position="center">


        </com.common.banner.view.AbSlidingPlayView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rectangel_w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家名称："
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_rectangel_w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家信誉："
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_shop_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:drawableLeft="@drawable/icon_certification"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rectangel_w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地       址："
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_shop_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_loc_red"
            android:textColor="@color/black"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rectangel_w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电       话："
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_shop_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_call_2"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rectangel_w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细信息："
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_detail"
            android:padding="10dp"/>
        <cn.lanmei.com.smartmall.myui.htmltext.HtmlTextView
            android:id="@+id/txt_shop_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
    </LinearLayout>



</LinearLayout>

