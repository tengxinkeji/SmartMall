<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    >

    <CheckBox
        android:id="@+id/box_goods"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@null"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:checked="true"
        android:background="@drawable/bg_check_2"/>
    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:src="@drawable/img_logo"
        android:layout_toRightOf="@+id/box_goods"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txt_goodsprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1200"
        android:textColor="@color/txtColor_bar"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/txt_goodsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/txtColor_txt"
        android:lines="1"
        android:layout_toRightOf="@+id/img_goods"
        android:layout_toLeftOf="@+id/txt_goodsprice"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txt_goodsparams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="111"
        android:textSize="@dimen/txt_small"
        android:textColor="@color/txtColor_hint"
        android:layout_alignLeft="@+id/txt_goodsname"
        android:layout_below="@+id/txt_goodsname"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_over_red"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/img_goods"
        android:layout_marginLeft="10dp"
        android:text="－"
        android:textColor="@color/white"
        android:gravity="center"/>
    <EditText
        android:id="@+id/txt_goodscount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@drawable/bg_rectangel_t"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt_sub"
        android:layout_alignBaseline="@+id/txt_sub"/>
    <TextView
        android:id="@+id/txt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_over_green"
        android:layout_alignBaseline="@+id/txt_sub"
        android:layout_toRightOf="@+id/txt_goodscount"
        android:layout_marginLeft="10dp"
        android:text="+"
        android:textColor="@color/white"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/img_goods_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_del"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
