<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_shop_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bj"/>
        <com.common.myui.RoundImageView
            xmlns:ui="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_shop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/img_logo"
            ui:type="round"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/layout_shop_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@drawable/btn"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_shop_attention"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_attention_no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"

                android:textColor="@color/white"
                />

        </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_toRightOf="@+id/img_shop"
           android:layout_toLeftOf="@+id/layout_shop_attention"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:id="@+id/txt_shop_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/app_name"
               android:textColor="@color/white"
                android:textSize="@dimen/txt_large"/>
           <TextView
               android:id="@+id/txt_shop_num"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/app_name"
               android:textColor="@color/white"
               />

       </LinearLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:visibility="visible">
        <com.common.banner.view.AbSlidingPlayView
            xmlns:ab="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:id="@+id/main_menu_0_ad"
            ab:point_position="center">


        </com.common.banner.view.AbSlidingPlayView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners_w"
            android:textColor="@color/txtColor_bar"
            android:text="点击进入"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="100dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_shop_ewm"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/bg_rectangel_w"
        android:text="店铺二维码"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/icon_ewm_02"/>

    <TextView
        android:id="@+id/txt_shop_detail"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/bg_rectangel_w"
        android:text="店铺详情"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@mipmap/my_11"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:background="@drawable/bg_rectangel_w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺信息"
            android:padding="10dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginLeft="10dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名称："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上开店时间："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_info_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线下开店时间："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_info_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_info_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:autoLink="phone"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:drawableRight="@drawable/icon_call_red_02"
                android:drawablePadding="10dp"
                android:textColor="@color/txtColor_txt"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rectangel_w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业资质"
            android:padding="10dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginLeft="10dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业执照："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_authnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="税务登记证号："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业期限："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺负责人："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司类型："
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
            <TextView
                android:id="@+id/txt_shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/txt_small"
                android:textColor="@color/txtColor_txt"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

