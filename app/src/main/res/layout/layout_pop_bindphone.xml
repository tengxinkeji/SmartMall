<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent_50">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corners_w">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码将以短信的方式发送到你的手机，请在60s内输入你的验证码。"
            android:textSize="@dimen/txt_large"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_1"/>
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:textColor="@color/txtColor_txt"
            android:background="@drawable/corners_input"
            android:layout_below="@+id/view_1"/>


        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:textColor="@color/txtColor_txt"
            android:background="@drawable/corners_input"
            android:layout_below="@+id/txt_phone"/>

        <EditText
            android:id="@+id/input_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/txtColor_txt"
            android:layout_marginTop="10dp"
            android:background="@drawable/corners_input"
            android:layout_below="@+id/input_phone"/>
        <TextView
            android:id="@+id/txt_send_code"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="发送验证码"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/btn"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/input_code"
            android:layout_alignBaseline="@+id/input_code"/>


        <TextView
            android:id="@+id/txt_ok"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@drawable/btn"
            android:layout_margin="10dp"
            android:layout_below="@+id/input_code"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>


</LinearLayout>
