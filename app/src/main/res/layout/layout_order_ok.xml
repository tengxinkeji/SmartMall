<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        android:id="@+id/layout_order_addr"
        layout="@layout/layout_address_info"/>

    <com.common.myui.MyListView
        android:id="@+id/listview_index"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:id="@+id/txt_shipping_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@color/white"
        android:textColor="@color/txtColor_txt"
        android:text="配送方式"/>
    <com.common.myui.MyListView
        android:id="@+id/listview_pay_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/divider"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:divider="@color/divider"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@android:color/transparent">
    </com.common.myui.MyListView>




</LinearLayout>