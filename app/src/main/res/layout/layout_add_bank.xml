<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <cn.lanmei.com.smartmall.myui.MyInputEdit
        android:id="@+id/ui_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wk:txttag="开户名："
        wk:input_type="txt">

    </cn.lanmei.com.smartmall.myui.MyInputEdit>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>

    <LinearLayout
        android:id="@+id/layout_banktype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择银行："
            android:layout_gravity="top"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_banktype"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="top"
            android:lines="1"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_down_2"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <cn.lanmei.com.smartmall.myui.MyInputEdit
        android:id="@+id/ui_banknum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wk:txttag="银行卡号："
        wk:input_hint="**** **** **** ****"
        wk:input_type="num">
    </cn.lanmei.com.smartmall.myui.MyInputEdit>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>
    <cn.lanmei.com.smartmall.myui.MyInputEdit
        android:id="@+id/ui_usernum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wk:txttag="身份证号："
        wk:input_hint="******************"
        wk:input_type="txt">
    </cn.lanmei.com.smartmall.myui.MyInputEdit>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/divider"/>


    <TextView
        android:id="@+id/txt_refer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/refer"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn"/>

</LinearLayout>
